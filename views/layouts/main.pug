    title #{pageTitle} | #{siteName}
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
    link(rel="stylesheet",href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.1/css/swiper.min.css")
    link(rel="stylesheet", href="/static/styles.css")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/5.4.5/js/swiper.js")
  body
    
    .sideNav
      //- img(src="/assets/imgs/main/close.png").closeButton 
      .sideNavMain
        h1.sidebarLogo COMMUNITING
        if !loggedUser
          p 안녕하세요!
        else
          img(src="/assets/imgs/main/sidebar-profile.png", width="70px")
          h2 #{user.name} 회원님
          h2 #{user.email}
      
      ul.sideNavMenu
        //- li
        //-   img(src="/assets/imgs/main/icon.png")
        //-   a 개인 정보 수정
        li
          img(src="/assets/imgs/main/notice-icon.png")
          a 공지사항
        li
          img(src="/assets/imgs/main/communiting-icon.png")
          a COMMUNITING 소개
        li
          img(src="/assets/imgs/main/ask-icon.png")
          a 문의하기
        li
          img(src="/assets/imgs/main/agreement-icon.png")
          a 이용약관
    include ../partials/header
    main
      block content
    include ../partials/footer
    script(src="/static/main.js")
